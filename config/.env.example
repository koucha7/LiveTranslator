# Environment variables for LiveTranslator

# OpenAI API Key (required for Whisper and translation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Translate API Key (optional, alternative to OpenAI for translation)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here

# Audio settings
AUDIO_CHUNK_SIZE=1024
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Translation settings
TRANSLATION_ENGINE=openai  # openai or google
GPT_MODEL=gpt-3.5-turbo
MAX_TOKENS=150

# UI settings
STREAMLIT_PORT=8501
DEBUG_MODE=false